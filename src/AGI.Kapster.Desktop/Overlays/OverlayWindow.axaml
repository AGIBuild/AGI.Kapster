<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AGI.Kapster.Desktop.Overlays"
        x:Class="AGI.Kapster.Desktop.Overlays.OverlayWindow"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual">
    <Grid Focusable="True" Background="Transparent">
        <Image x:Name="BackgroundImage" Stretch="Fill" IsHitTestVisible="False" RenderOptions.BitmapInterpolationMode="HighQuality"/>
        <!-- Blurred background layer for frosted glass effect -->
        <Image x:Name="BlurredBackgroundImage" Stretch="Fill" IsHitTestVisible="False" RenderOptions.BitmapInterpolationMode="HighQuality">
            <Image.Effect>
                <BlurEffect Radius="18"/>
            </Image.Effect>
        </Image>
        <!-- Semi-transparent overlay mask with selection cutout -->
        <Border x:Name="MaskBorder" Background="#18000000" IsHitTestVisible="False"/>
        <local:SelectionOverlay x:Name="Selector"/>
        <!-- Annotator is created in code-behind with DI-resolved settings service -->
        <Canvas x:Name="UiCanvas">
            <local:NewAnnotationToolbar x:Name="Toolbar"/>
        </Canvas>
    </Grid>
</Window>
