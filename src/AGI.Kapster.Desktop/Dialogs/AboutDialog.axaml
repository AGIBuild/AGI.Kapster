<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
        x:Class="AGI.Kapster.Desktop.Dialogs.AboutDialog"
        Title="About AGI Kapster"
        Width="520"
        Height="360"
        MinWidth="520"
        MinHeight="360"
        MaxWidth="520"
        MaxHeight="360"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Icon="avares://AGI.Kapster.Desktop/logo.ico"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="None"
        TransparencyLevelHint="AcrylicBlur"
        TransparencyBackgroundFallback="Transparent"
        Background="Transparent">
    <Border Background="#C0122233" CornerRadius="3" BorderBrush="#30336699" BorderThickness="1" Padding="24" Margin="0" BoxShadow="0 12 36 0 #30000000">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Center" Spacing="16">
                    <Image Source="avares://AGI.Kapster.Desktop/logo.ico" Width="48" Height="48"/>
                    <StackPanel>
                        <TextBlock Text="AGI Kapster" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF"/>
                        <TextBlock x:Name="VersionText" Text="Version" FontSize="14" Foreground="#D0FFFFFF"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1"
                        x:Name="CloseButton"
                        Content="âœ•"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        BorderBrush="Transparent"
                        Foreground="#FFFFFF"
                        FontSize="16"
                        Cursor="Hand"
                        Padding="0"
                        Margin="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="CornerRadius" Value="16"/>
                        </Style>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#40FFFFFF"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#60FFFFFF"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>

            <Border Grid.Row="1" Background="#40224466" CornerRadius="6" Padding="18" Margin="0,24,0,18" BorderBrush="#50336699" BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="License" FontSize="13" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                    <TextBlock Text="MIT License" FontSize="12" Foreground="#E0FFFFFF"/>

                    <TextBlock Text="Developer" FontSize="13" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,8,0,0"/>
                    <TextBlock Text="AGI Build Team" FontSize="12" Foreground="#E0FFFFFF"/>

                    <TextBlock Text="GitHub Issues" FontSize="13" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,8,0,0"/>
                    <controls:HyperlinkButton Content="github.com/AGIBuild/AGI.Kapster/issues"
                                              FontSize="12" Padding="0" Margin="0"
                                              Foreground="#8FD0FFFF"
                                              NavigateUri="https://github.com/AGIBuild/AGI.Kapster/issues"
                                              HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <TextBlock Grid.Row="2" Text="Cross-platform screenshot and annotation tool" FontSize="12" Foreground="#B0FFFFFF" TextAlignment="Center" Margin="0,0,0,8"/>
        </Grid>
    </Border>
</Window>
